@page
@model CoronaDataManagement.Pages.PatientData.AddPatientModel

<br />
<h2 class="text-info">Add New Patient</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Patient.PatientName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Patient.PatientName" class="form-control" />
            </div>
            <span asp-validation-for="Patient.PatientName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Patient.PatientStatus"></label>
            </div>
            <div class="col-6">
                <input asp-for="Patient.PatientStatus" class="form-control" />
            </div>
            <span asp-validation-for="Patient.PatientStatus" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

